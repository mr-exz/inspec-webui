<html>
  <head>
    <title>inspec_webui</title>
  </head>
  <body>
    <div class="row">
        <div class="jumbotron">
          <h3 class="text-center">Inspec WebUI</h3>
          <%= form_tag({:action => :import}, multipart: true) do %>
              <div class="form-group">
                <p><label><b>List of servers:</b></label><%= file_field_tag :servers_file %></p>
              </div>

              <div class="form-group">
                <p><label><b>Inspec script:</b></label><%= file_field_tag :inspec_file %></p>
              </div>

              <%= submit_tag( "Start" , class: "btn btn-default") %>
          <% end %>
        </div>
    </div>
  </body>
</html>